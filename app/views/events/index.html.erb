<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tour</th>
      <th>Course</th>
      <th>Category</th>
      <th>Gender</th>
      <th>Level</th>
      <th>Days</th>
      <th>Start date</th>
      <th>Reg deadline</th>
      <th>Qual required</th>
      <th>Comments</th>
      <th>Fee</th>
      <th>Details/Registration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= link_to event.tour.acronym, event.tour.url, target: :_blank %></td>
        <td><%= link_to event.course.name, event.course.url, target: :_blank %></td>
        <td><%= event.category.name %></td>



        <td><%= event.gender.name %></td>
        <td><%= event.level.name %></td>
        <td><%= event.days %></td>
        <td><%= event.start_date.strftime"%e-%h-%y" %></td>
        <td><%= event.reg_deadline.strftime"%e-%h-%y" %></td>


        <td>
          <% if event.qual_required %>
                  <i class="fa fa-check-square "></i>   
          <% else %>
                  <i class="fa fa-square "></i>   
          <% end %>
        </td>


        <td><%= event.comments %></td>
        <td><%= number_to_currency(event.fee) %></td>


         <td> <%= link_to event.url, target: :_blank   do %> 
              <i class="fa fa-link "></i>   
              <% end %> 
         </td>


        <td> <%= link_to event do %> 
              <i class="fa fa-info-circle "></i>   
              <% end %> 
         </td>
        <td> <%= link_to edit_event_path(event) do %> 
              <i class="fa fa-edit "></i>   
              <% end %> 
         </td>

         <td> <%= link_to event, method: :delete, data: { confirm: 'Are you sure?' }  do %> 
              <i class="fa fa-trash "></i>   
              <% end %> 
         </td>




      </tr>
    <% end %>
  </tbody>
</table>

<br>

