<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>


  <div class="field">
    <%= form.label :tour %>
    <%= select_tag(:tour_id, options_for_select(@tours), :selected => :tour_id)%>
  </div>

  <div class="field">
    <%= form.label :course %>
    <%= select_tag(:course_id, options_for_select(@courses), :selected => :course_id)%>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= select_tag(:category_id, options_for_select(@categories), :selected => :category_id)%>
  </div>
  <div class="field">
    <%= form.label :gender %>
    <%= select_tag(:gender_id, options_for_select(@genders), :selected => :gender_id)%>
  </div>
  <div class="field">
    <%= form.label :level %>
    <%= select_tag(:level_id, options_for_select(@levels), :selected => :level_id)%>
  </div>


  <div class="field">
    <%= form.label :days %>
    <%= form.number_field :days, id: :event_days %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :event_start_date %>
  </div>

  <div class="field">
    <%= form.label :reg_deadline %>
    <%= form.date_select :reg_deadline, id: :event_reg_deadline %>
  </div>

  <div class="field">
    <%= form.label :qual_required %>
    <%= form.check_box :qual_required, id: :event_qual_required %>
  </div>

  <div class="field">
    <%= form.label :comments %>
    <%= form.text_area :comments, id: :event_comments %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
